{% extends 'base.html.twig' %}

{% block title %}Perfil de {{ user.username }}{% endblock %}

{% block styles %}
    {{ parent() }}
{% endblock %}

{% block main %}
    <section class="w-full py-12 px-4 flex justify-center bg-gray-100 dark:bg-gray-900">
        <div class="w-full max-w-5xl bg-white dark:bg-gray-800 rounded-3xl p-8 md:p-12 space-y-10">
            <div class="flex flex-col md:flex-row items-center gap-8">
                <img src="{{ asset('assets/images/user/' ~ user.profilePic) }}"
                     alt="{{ user.username }}"
                     class="w-40 h-40 rounded-full object-cover border-4 border-white dark:border-gray-700" />

                <div class="text-center md:text-left space-y-2">
                    <h1 class="text-4xl font-bold text-gray-900 dark:text-white">{{ user.name }} {{ user.lastname }}</h1>
                    <p class="text-xl text-gray-500 dark:text-gray-300">@{{ user.username }}</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-700 dark:text-gray-300">
                <div>
                    <h2 class="font-semibold text-gray-900 dark:text-white mb-1">Nombre:</h2>
                    <p>{{ user.name }}</p>
                </div>
                <div>
                    <h2 class="font-semibold text-gray-900 dark:text-white mb-1">Apellidos:</h2>
                    <p>{{ user.lastname ?? '—' }}</p>
                </div>
                <div>
                    <h2 class="font-semibold text-gray-900 dark:text-white mb-1">Email:</h2>
                    <p>{{ user.email }}</p>
                </div>
                <div>
                    <h2 class="font-semibold text-gray-900 dark:text-white mb-1">Fecha de registro:</h2>
                    <p>{{ user.registerDate ? user.registerDate|date('d/m/Y') : '—' }}</p>
                </div>
            </div>

            {% if user.id == app.user.id %}
                <div class="pt-6 border-t border-gray-300 dark:border-gray-700 text-center md:text-left">
                    <a href="{{ path('user_edit', { 'id': user.id }) }}"
                       class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-xl transition">
                        Editar perfil
                    </a>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
